<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivItemPersonajeImage"
        android:layout_width="99dp"
        android:layout_height="102dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/tvItemPersonajeName"
        android:layout_width="124dp"
        android:layout_height="14dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivItemPersonajeImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvItemPersonajeEstado"
        android:layout_width="124dp"
        android:layout_height="14dp"
        android:layout_marginTop="1dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivItemPersonajeImage"
        app:layout_constraintTop_toBottomOf="@+id/tvItemPersonajeName" />

    <TextView
        android:id="@+id/txtItemPersonajeUltimaLocation"
        android:layout_width="124dp"
        android:layout_height="14dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivItemPersonajeImage"
        app:layout_constraintTop_toBottomOf="@+id/tvItemPersonajeEstado" />
    <TextView
        android:id="@+id/tvItemPersonajeUltimaLocation"
        android:layout_width="124dp"
        android:layout_height="14dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivItemPersonajeImage"
        app:layout_constraintTop_toBottomOf="@+id/txtItemPersonajeUltimaLocation" />

    <TextView
        android:id="@+id/txtItemPersonajePrimeraVez"
        android:layout_width="124dp"
        android:layout_height="14dp"
        android:layout_marginTop="1dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivItemPersonajeImage"
        app:layout_constraintTop_toBottomOf="@+id/tvItemPersonajeUltimaLocation" />

    <TextView
        android:id="@+id/tvItemPersonajePrimeraVez"
        android:layout_width="124dp"
        android:layout_height="14dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivItemPersonajeImage"
        app:layout_constraintTop_toBottomOf="@+id/txtItemPersonajePrimeraVez" />


</androidx.constraintlayout.widget.ConstraintLayout>